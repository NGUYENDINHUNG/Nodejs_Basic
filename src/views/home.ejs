<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>home</title>
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        /* Add a black background color to the top navigation */
        .topnav {
            background-color: #333;
            overflow: hidden;
        }

        /* Style the links inside the navigation bar */
        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        /* Change the color of links on hover */
        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }

        /* Add a color to the active/current link */
        .topnav a.active {
            background-color: #04AA6D;
            color: white;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th,
        td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        tr:hover {
            background-color: #ccc;
        }

        .table-container {
            padding: 15px 20px;
        }

        .title {
            font-size: 25px;
            font-weight: 600;
            padding-bottom: 10px;
        }
    </style>
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/create">News</a>

    </div>
    <div class="table-container">
        <div class="title">List Users</div>
        <table>
    </div>
    <tr>
        <th>Id</th>
        <th>Email</th>
        <th>Name</th>
        <th>City</th>
        <th>Actions</th>
    </tr>
    <% listUsers.forEach(function(user,index) { %>
        <tr>
            <td>
                <%=user.id %>
            </td>
            <td>
                <%=user.email%>
            </td>
            <td>$<%=user.name%>
            </td>
            <td>$<%=user.city%>
            </td>
            <td>
                <a href="/update/<%=user.id %>">edit</a>
                <form action="/delete-user/<%=user.id %>" method="POST">
                    <button>delete</button>
                </form>
            </td>
        </tr>
        <% }); %>
            </table>
            </div>



</body>

</html>